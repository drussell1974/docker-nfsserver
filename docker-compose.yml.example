version: "3"
services:
        nfs_server:
                image: drussell1974/nfs-server:v0.0.9-alpha
                external_links:
                        - ldap_server
                ports:
                        - 2049:2049
                environment:
                        - NFS_IPADDR_ALLOWED=${NFS_IPADDR_ALLOWED}
                        - NFS_PUBLIC_CONT=${NFS_PUBLIC_CONT}
                        - NFS_HOME_CONT=${NFS_HOME_CONT}
                volumes:
                        - nfs-server_public:${NFS_PUBLIC_CONT}
                        - nfs-server_home:${NFS_HOME_CONT}
volumes:
        nfs-server_public:
        nfs-server_home:


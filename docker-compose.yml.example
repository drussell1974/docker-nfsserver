version: "3"
services:
        nfs_server:
                image: drussell1974/nfs-server:release-v0.0.16-alpha
                external_links:
                        - ldap_server
                ports:
                        - 2049:2049
                environment:
                        - NFS_IPADDR_ALLOWED=${NFS_IPADDR_ALLOWED}
                        - NFS_PUBLIC_CONT=${NFS_PUBLIC_CONT}
                        - NFS_HOME_CONT=${NFS_HOME_CONT}
                        - NFS_DISABLE=${NFS_DISABLE}
                        - NFS_DISABLE_VERSION=${NFS_DISABLE_VERSION}
                volumes:
                        - ./nfs_share/public:${NFS_PUBLIC_CONT}
                        - ./nfs_share/home:${NFS_HOME_CONT}

